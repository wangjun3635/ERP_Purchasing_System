<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.team.purchasing.mapper.erp.SubjectDao">

    <resultMap id="BaseResultMap" type="com.team.purchasing.bean.erp.Subject">
        <result column="id" property="id" />
        <result column="name" property="name" />
        <result column="expenditure" property="expenditure" />
        <result column="owner" property="owner" />
        <result column="account" property="account" />
        <result column="totalAmount" property="totalAmount" />
        <result column="restAmount" property="restAmount" />
        <result column="startDate" property="startDate" />
        <result column="endDate" property="endDate" />
        <result column="audit" property="audit" />
        <result column="createTime" property="createTime" />
        <result column="createUserId" property="createUserId" />
        <result column="updateTime" property="updateTime" />
        <result column="updateUserId" property="updateUserId" />
    </resultMap>

    <insert id="addSubject">
        insert into tb_subject(name,
         expenditure,
         owner,
         account,
         totalAmount,
         restAmount,
         startDate,
         endDate,
         audit,
         createTime,
         createUserId,
         updateTime,
         updateUserId) values(#{name},
         #{expenditure},
         #{owner},
         #{account},
         #{totalAmount},
         #{restAmount},
         Convert(date,#{startDate},23),
         Convert(date,#{endDate},23),
         #{audit},
         GETDATE(),
         #{createUserId},
         GETDATE(),
         #{updateUserId});
    </insert>

    <select id="querySubject">
        select
         id,
         name,
         expenditure,
         owner,
         account,
         totalAmount,
         restAmount,
         startDate,
         endDate,
         audit,
         createTime,
         createUserId,
         updateTime,
         updateUserId from tb_subject
         <where>
             <if test="id != null">
                id=#{id}
             </if>
         </where>
    </select>

</mapper>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.team.purchasing.mapper.PromotionDao">

    <resultMap id="BaseResultMap" type="com.team.purchasing.bean.Promotion">
        <result column="id" property="id" />
        <result column="title" property="title" />
        <result column="attachmentImg" property="attachmentImg" />
        <result column="content" property="content" />
        <result column="createTime" property="createTime" />
        <result column="createUserId" property="createUserId" />
        <result column="updateTime" property="updateTime" />
        <result column="updateUserId" property="updateUserId" />
    </resultMap>

    <parameterMap id="City" type="org.spring.springboot.domain.City"/>

    <sql id="Base_Column_List">
         id,
		 title,
         attachmentImg,
         content,
         createTime,
         createUserId,
         updateTime,
         updateUserId
	</sql>


    <select id="queryAll" resultMap="BaseResultMap">
        select
          <include refid="Base_Column_List" />
        from tb_promotion
    </select>

    <select id="queryById" resultType="com.team.purchasing.bean.Promotion">
      select
         <include refid="Base_Column_List" />
         from tb_promotion where id=#{id}
    </select>

    <insert id="addPromotion" parameterType="com.team.purchasing.bean.Promotion">
      insert into tb_promotion(id,
      title,
      attachmentImg,
      content,
      createTime,
      createUserId,
      updateTime,
      updateUserId) values (#{id},
       #{title},
       #{attachmentImg},
       #{content},
       #{createTime},
       #{createUserId},
       #{updateTime},
       #{updateUserId})
    </insert>

    <update id="updatePromotion">
      update tb_promotion tp set tp.title=#{title},
      tp.attachmentImg=#{attachmentImg},
      tp.content=#{content},
      tp.createTime=#{createTime},
      tp.createUserId=#{createUserId},
      tp.updateTime=#{updateTime},
      tp.updateUserId=#{updateUserId}
      where tp.id=#{id}
    </update>

</mapper>